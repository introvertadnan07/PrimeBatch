import matplotlib.pyplot as plt

# Data
labels = ["Batman", "Superman", "Iron Man", "Captain America"]
values = [41, 13, 27, 19]
colors = ["gold", "gray", "orange", "skyblue"]

plt.figure(figsize=(6, 6))

# Custom function to show name + %
def make_label(pct, allvals):
    absolute = int(round(pct))
    return f"{absolute}%"

plt.pie(
    values,
    labels=labels,
    colors=colors,
    autopct="%1.0f%%",
    startangle=90,
    textprops={"fontsize": 10},
    wedgeprops={"edgecolor": "white"}
)

plt.title("Superhero Battle Winner")
plt.axis("equal")
plt.show()



plt.figure(figsize=(6, 6))

plt.pie(
    values,
    labels=[f"{l}\n{v}%" for l, v in zip(labels, values)],
    colors=colors,
    startangle=90,
    labeldistance=0.6,
    wedgeprops={"edgecolor": "white"}
)

plt.title("Superhero Battle Winner")
plt.axis("equal")
plt.show()




