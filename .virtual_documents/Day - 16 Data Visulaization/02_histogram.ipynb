import numpy as np
import matplotlib.pyplot as plt

x = np.linspace(0, 10, 100)
y1 = np.sqrt(x)
y2 = 2 * x
y3 = x**2
y4 = x**3

fig, ax = plt.subplots(2, 2)

ax[0][0].plot(x, y1)
ax[0][0].set_title("plot1 - square root")

ax[0][1].plot(x, y2)
ax[0][1].set_title("plot2 - double")

ax[1][0].plot(x, y3)
ax[1][0].set_title("plot3 - square")

ax[1][1].plot(x, y4)
ax[1][1].set_title("plot4 - cube")

ax[0][0].plot(x, y1, color="red")
ax[0][1].plot(x, y2, color="green")
ax[1][0].plot(x, y3, color="blue")
ax[1][1].plot(x, y4, color="purple")


fig.suptitle("Multiple plots")
plt.tight_layout()
plt.show()



import matplotlib.pyplot as plt

days = ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]

cities = ["Delhi", "Mumbai", "Bengaluru", "Kolkata"]

temperatures = [
    [23, 22, 21, 38, 39, 40, 41],  # Delhi
    [32, 33, 17, 34, 35, 36, 37],  # Mumbai
    [28, 22, 31, 30, 31, 32, 32],  # Bengaluru
    [25, 24, 27, 36, 37, 38, 39]   # Kolkata
]

fig, axes = plt.subplots(2, 2)

city_no = 0
for i in range(2):
    for j in range(2):
        axes[i][j].plot(days, temperatures[city_no], marker = "o")
        axes[i][j].set_title(cities[city_no])
        axes[i][j].grid(True)
        city_no += 1

fig.suptitle("Temperature in cities over the week")
fig.supylabel("Temperature")
fig.supxlabel("Days")
plt.tight_layout()
plt.show()


import matplotlib.pyplot as plt

days = ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]

cities = ["Delhi", "Mumbai", "Bengaluru", "Kolkata"]

temperatures = [
    [23, 22, 21, 38, 39, 40, 41],  # Delhi
    [32, 33, 17, 34, 35, 36, 37],  # Mumbai
    [28, 22, 31, 30, 31, 32, 32],  # Bengaluru
    [25, 24, 27, 36, 37, 38, 39]   # Kolkata
]

fig, axes = plt.subplots(2, 2)

axes = axes.flatten()
for i,ax in enumerate(axes):
    ax.plot(days, temperatures[i], marker 'o')
    ax.set_title(cities[i])
    ax.grid(True)

fig.suptitle("Temperature in cities over the week")
fig.supylabel("Temperature")
fig.supxlabel("Days")
plt.tight_layout()
plt.show()



